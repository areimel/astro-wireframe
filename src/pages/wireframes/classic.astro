---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// New reusable components
import WireframeHero from "@/components/wireframes/WireframeHero.astro";
import WireframeSectionHeader from "@/components/wireframes/WireframeSectionHeader.astro";
import WireframeFeatureCard from "@/components/wireframes/WireframeFeatureCard.astro";
import WireframeLogoGrid from "@/components/wireframes/WireframeLogoGrid.astro";
import WireframeTestimonial from "@/components/wireframes/WireframeTestimonial.astro";
import WireframePricingCard from "@/components/wireframes/WireframePricingCard.astro";
import WireframeCTA from "@/components/wireframes/WireframeCTA.astro";

// Feature data
const features = [
  {
    icon: "bx:bx-shield",
    title: "Secure & Reliable",
    description: "Enterprise-grade security with 99.9% uptime guarantee for peace of mind.",
    iconColor: "var(--color-theme-button)",
  },
  {
    icon: "bx:bxs-bolt",
    title: "Lightning Fast",
    description: "Optimized performance ensures your workflows run at maximum speed.",
    iconColor: "var(--color-theme-secondary)",
  },
  {
    icon: "bx:bx-user",
    title: "User Friendly",
    description: "Intuitive interface designed for users of all technical skill levels.",
    iconColor: "var(--color-theme-tertiary)",
  },
  {
    icon: "bx:bx-cog",
    title: "Fully Customizable",
    description: "Adapt the platform to fit your unique business requirements perfectly.",
    iconColor: "var(--color-theme-highlight)",
  },
  {
    icon: "bx:bx-support",
    title: "24/7 Support",
    description: "Our expert team is always available to help you succeed with our platform.",
    iconColor: "var(--color-theme-button)",
  },
  {
    icon: "bx:bx-trending-up",
    title: "Scale with Growth",
    description: "Built to grow with your business from startup to enterprise scale.",
    iconColor: "var(--color-theme-secondary)",
  },
];

// Logo data
const logos = [
  { name: "Company Logo" },
  { name: "Company Logo" },
  { name: "Company Logo" },
  { name: "Company Logo" },
  { name: "Company Logo" },
  { name: "Company Logo" },
];

// Pricing data
const pricingPlans = [
  {
    name: "Starter",
    price: "29",
    description: "Perfect for small teams",
    features: [
      "Up to 5 team members",
      "10GB storage",
      "Basic support",
      "Core features",
    ],
    ctaText: "Get Started",
  },
  {
    name: "Professional",
    price: "79",
    description: "Best for growing businesses",
    features: [
      "Up to 25 team members",
      "100GB storage",
      "Priority support",
      "Advanced features",
      "API access",
    ],
    featured: true,
    badge: "Most Popular",
    ctaText: "Start Free Trial",
  },
  {
    name: "Enterprise",
    price: "199",
    description: "For large organizations",
    features: [
      "Unlimited team members",
      "1TB storage",
      "24/7 dedicated support",
      "All features included",
      "Custom integrations",
    ],
    ctaText: "Contact Sales",
  },
];
---

<Layout title="Classic Hero Layout - Wireframe Landing Page">
  <!-- Hero Section -->
  <WireframeHero
    title="Your Compelling Headline Here"
    subtitle="A persuasive subheading that explains the value proposition and gets visitors excited about your product or service."
    layout="split"
    primaryCTA={{ text: "Get Started Free", href: "#pricing", icon: "bx:bx-rocket" }}
    secondaryCTA={{ text: "Watch Demo", href: "#features", icon: "bx:bx-play-circle" }}
  >
    <!-- Hero Image Placeholder -->
    <div class="wireframe-box doodle-border p-8 flex items-center justify-center min-h-[400px]">
      <div class="text-center">
        <Icon name="bx:bx-image" class="w-24 h-24 mx-auto mb-4" style="color: var(--color-theme-tertiary);" />
        <p class="wireframe-text text-lg">Hero Image / Video</p>
        <p class="wireframe-text text-sm theme-tertiary mt-2">Product screenshot or demo video</p>
      </div>
    </div>
  </WireframeHero>

  <!-- Features Grid Section -->
  <section id="features" class="wireframe-section py-16">
    <Container>
      <WireframeSectionHeader
        title="Why Choose Our Solution"
        description="Discover the key features that make us the best choice for your needs."
        size="lg"
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <WireframeFeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
            iconColor={feature.iconColor}
          />
        ))}
      </div>
    </Container>
  </section>

  <!-- Social Proof Section -->
  <section class="wireframe-section py-16">
    <Container>
      <WireframeLogoGrid
        logos={logos}
        columns={6}
        title="Trusted by 10,000+ Companies"
        description="Join the companies that trust us to power their success"
        class="mb-16"
      />

      <WireframeTestimonial
        quote="This platform has completely transformed how we operate. The results speak for themselves - 3x faster workflows and 50% cost reduction."
        author="Sarah Johnson"
        title="CEO, TechCorp Solutions"
        variant="centered"
        size="lg"
      />
    </Container>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="wireframe-section py-16">
    <Container>
      <WireframeSectionHeader
        title="Simple, Transparent Pricing"
        description="Choose the perfect plan for your needs. Upgrade or downgrade at any time."
        size="lg"
      />

      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {pricingPlans.map((plan) => (
          <WireframePricingCard
            name={plan.name}
            price={plan.price}
            description={plan.description}
            features={plan.features}
            featured={plan.featured}
            badge={plan.badge}
            ctaText={plan.ctaText}
          />
        ))}
      </div>
    </Container>
  </section>

  <!-- Final CTA Section -->
  <WireframeCTA
    title="Ready to Transform Your Business?"
    description="Join thousands of satisfied customers who have revolutionized their workflows with our platform. Start your free trial today!"
    primaryCTA={{ text: "Start Free Trial", href: "#", icon: "bx:bx-rocket" }}
    secondaryCTA={{ text: "Schedule Demo", href: "#", icon: "bx:bx-phone" }}
    disclaimer="No credit card required • 14-day free trial • Cancel anytime"
  />
</Layout>
