---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import JobCard from "@/components/wireframes/JobCard.astro";
---

<Layout title="Job Posting - Wireframe Landing Page">
  <!-- Header Section -->
  <section class="wireframe-section py-8 lg:py-12">
    <Container>
      <div class="wireframe-box doodle-border p-6 mb-8">
        <div class="flex items-center gap-4 mb-4">
          <Link
            href="/wireframes"
            class="doodle flex items-center gap-2"
            size="sm"
            style="outline">
            <Icon name="bx:bx-arrow-back" class="w-4 h-4" />
            Back to Wireframes
          </Link>
        </div>
        <h1 class="wireframe-heading text-3xl lg:text-4xl mb-4">
          Job Posting Layout
        </h1>
        <p class="wireframe-text text-lg max-w-2xl">
          A comprehensive job posting page design featuring job details, requirements, application flow, and company information in a clean, organized layout.
        </p>
      </div>
    </Container>
  </section>

  <!-- Main Job Content Section -->
  <section class="wireframe-section py-8">
    <Container>
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Content Column -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Job Card -->
          <JobCard 
            title="Senior Frontend Developer"
            company="TechInnovate Solutions"
            location="San Francisco, CA"
            type="Full-time"
            experience="5+ years"
            salary="$120,000 - $150,000"
            postedDate="3 days ago"
            description="Join our dynamic team as a Senior Frontend Developer and help build cutting-edge web applications that serve millions of users worldwide. You'll work with the latest technologies and collaborate with talented designers and engineers."
            skills={["React", "TypeScript", "JavaScript", "CSS", "Git"]}
            featured={true}
          />

          <!-- Job Requirements -->
          <div class="wireframe-box doodle-border p-6">
            <h3 class="wireframe-heading text-xl mb-6">Requirements & Qualifications</h3>
            
            <!-- Required Skills -->
            <div class="mb-8">
              <h4 class="wireframe-heading text-lg mb-4 flex items-center gap-3">
                <Icon name="bx:bx-check-circle" class="w-6 h-6" style="color: var(--color-theme-button);" />
                Required Skills
              </h4>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">5+ years of experience in frontend development</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">Expert knowledge of React and TypeScript</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">Strong understanding of modern CSS and responsive design</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">Experience with state management (Redux, Context API)</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">Familiarity with testing frameworks (Jest, React Testing Library)</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">Knowledge of build tools (Webpack, Vite) and version control (Git)</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text">Bachelor's degree in Computer Science or related field</span>
                </li>
              </ul>
            </div>

            <!-- Preferred Skills -->
            <div>
              <h4 class="wireframe-heading text-lg mb-4 flex items-center gap-3">
                <Icon name="bx:bx-circle" class="w-6 h-6" style="color: var(--color-theme-secondary);" />
                Preferred Skills
              </h4>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-plus" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <span class="wireframe-text">Experience with Next.js or other React frameworks</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-plus" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <span class="wireframe-text">Knowledge of backend technologies (Node.js, Python)</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-plus" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <span class="wireframe-text">Experience with cloud platforms (AWS, Azure, GCP)</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-plus" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <span class="wireframe-text">Understanding of UX/UI design principles</span>
                </li>
                <li class="flex items-start gap-3">
                  <Icon name="bx:bx-plus" class="w-4 h-4 mt-1 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <span class="wireframe-text">Previous startup or fast-paced environment experience</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Application Process -->
          <div class="wireframe-box doodle-border p-6">
            <h3 class="wireframe-heading text-xl mb-6">Application Process</h3>
            <p class="wireframe-text mb-8">Follow these steps to join our team</p>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
              <!-- Step 1 -->
              <div class="wireframe-box doodle-border p-4 text-center">
                <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 theme-button-primary">
                  <span class="wireframe-text font-bold text-white">1</span>
                </div>
                <div class="mb-4">
                  <Icon name="bx:bx-file" class="w-8 h-8 mx-auto" style="color: var(--color-theme-button);" />
                </div>
                <h4 class="wireframe-heading text-lg mb-3">Submit Application</h4>
                <p class="wireframe-text text-sm">Complete our online application form with your resume and cover letter</p>
              </div>

              <!-- Step 2 -->
              <div class="wireframe-box doodle-border p-4 text-center">
                <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 theme-quaternary-bg">
                  <span class="wireframe-text font-bold">2</span>
                </div>
                <div class="mb-4">
                  <Icon name="bx:bx-phone" class="w-8 h-8 mx-auto" style="color: var(--color-theme-button);" />
                </div>
                <h4 class="wireframe-heading text-lg mb-3">Initial Screening</h4>
                <p class="wireframe-text text-sm">HR team reviews your application and conducts initial phone screening</p>
              </div>

              <!-- Step 3 -->
              <div class="wireframe-box doodle-border p-4 text-center">
                <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 theme-quaternary-bg">
                  <span class="wireframe-text font-bold">3</span>
                </div>
                <div class="mb-4">
                  <Icon name="bx:bx-code-alt" class="w-8 h-8 mx-auto" style="color: var(--color-theme-button);" />
                </div>
                <h4 class="wireframe-heading text-lg mb-3">Technical Interview</h4>
                <p class="wireframe-text text-sm">Technical assessment and coding challenge with our engineering team</p>
              </div>

              <!-- Step 4 -->
              <div class="wireframe-box doodle-border p-4 text-center">
                <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 theme-quaternary-bg">
                  <span class="wireframe-text font-bold">4</span>
                </div>
                <div class="mb-4">
                  <Icon name="bx:bx-user-check" class="w-8 h-8 mx-auto" style="color: var(--color-theme-button);" />
                </div>
                <h4 class="wireframe-heading text-lg mb-3">Final Interview</h4>
                <p class="wireframe-text text-sm">Culture fit and team interview with hiring manager and potential colleagues</p>
              </div>

              <!-- Step 5 -->
              <div class="wireframe-box doodle-border p-4 text-center">
                <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4 theme-quaternary-bg">
                  <span class="wireframe-text font-bold">5</span>
                </div>
                <div class="mb-4">
                  <Icon name="bx:bx-check-circle" class="w-8 h-8 mx-auto" style="color: var(--color-theme-button);" />
                </div>
                <h4 class="wireframe-heading text-lg mb-3">Offer & Onboarding</h4>
                <p class="wireframe-text text-sm">Job offer negotiation and comprehensive onboarding process</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="space-y-8">
          <!-- Company Information -->
          <div class="wireframe-box doodle-border p-6">
            <!-- Company Header -->
            <div class="text-center mb-6">
              <div class="wireframe-box doodle-border w-20 h-20 mx-auto mb-4 theme-quaternary-bg flex items-center justify-center rounded-lg">
                <Icon name="bx:bx-buildings" class="w-8 h-8" style="color: var(--color-theme-button);" />
              </div>
              <h2 class="wireframe-heading text-2xl mb-3">TechInnovate Solutions</h2>
              <p class="wireframe-text text-sm">
                We're a fast-growing tech company building innovative software solutions that transform how businesses operate.
              </p>
            </div>

            <!-- Company Details -->
            <div class="mb-6">
              <h3 class="wireframe-heading text-lg mb-4">Company Details</h3>
              <div class="space-y-3">
                <div class="flex items-center gap-3">
                  <Icon name="bx:bx-briefcase-alt" class="w-4 h-4 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <div>
                    <span class="wireframe-text text-sm font-bold">Industry: </span>
                    <span class="wireframe-text text-sm">Software Development</span>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <Icon name="bx:bx-group" class="w-4 h-4 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <div>
                    <span class="wireframe-text text-sm font-bold">Size: </span>
                    <span class="wireframe-text text-sm">150-300 employees</span>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <Icon name="bx:bx-calendar" class="w-4 h-4 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <div>
                    <span class="wireframe-text text-sm font-bold">Founded: </span>
                    <span class="wireframe-text text-sm">2018</span>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <Icon name="bx:bx-map" class="w-4 h-4 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <div>
                    <span class="wireframe-text text-sm font-bold">Location: </span>
                    <span class="wireframe-text text-sm">San Francisco, CA</span>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <Icon name="bx:bx-globe" class="w-4 h-4 flex-shrink-0" style="color: var(--color-theme-secondary);" />
                  <div>
                    <span class="wireframe-text text-sm font-bold">Website: </span>
                    <a href="http://www.techinnovate.com" class="theme-link text-sm" target="_blank" rel="noopener">
                      www.techinnovate.com
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Benefits -->
            <div class="mb-6">
              <h3 class="wireframe-heading text-lg mb-4">Benefits & Perks</h3>
              <div class="space-y-2">
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Competitive salary & equity</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Health, dental & vision insurance</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Flexible work arrangements</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Professional development budget</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-check" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Unlimited PTO policy</span>
                </div>
                <div class="wireframe-text text-sm opacity-75">
                  +1 more benefits
                </div>
              </div>
            </div>

            <!-- Culture -->
            <div class="mb-6">
              <h3 class="wireframe-heading text-lg mb-4">Culture & Values</h3>
              <div class="space-y-2">
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-heart" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Innovation-driven environment</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-heart" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Collaborative team culture</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-heart" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Work-life balance focus</span>
                </div>
                <div class="flex items-start gap-2">
                  <Icon name="bx:bx-heart" class="w-4 h-4 mt-0.5 flex-shrink-0" style="color: var(--color-theme-button);" />
                  <span class="wireframe-text text-sm">Continuous learning opportunities</span>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="space-y-3">
              <button class="theme-button-primary w-full py-3 rounded-lg">
                View All Jobs
              </button>
              <button class="theme-button-outline w-full py-3 rounded-lg">
                Follow Company
              </button>
            </div>
          </div>

          <!-- Quick Apply Section -->
          <div class="wireframe-box doodle-border p-6 sticky top-8">
            <h3 class="wireframe-heading text-xl mb-4">Ready to Apply?</h3>
            <p class="wireframe-text text-sm mb-6">
              Join our team and help shape the future of technology. We're looking for passionate developers who love to create amazing user experiences.
            </p>
            <div class="space-y-3">
              <Link
                href="#"
                class="doodle flex items-center justify-center gap-2 w-full"
                size="lg"
                style="primary">
                <Icon name="bx:bx-send" class="w-5 h-5" />
                Apply Now
              </Link>
              <Link
                href="#"
                class="doodle flex items-center justify-center gap-2 w-full"
                size="md"
                style="outline">
                <Icon name="bx:bx-bookmark" class="w-4 h-4" />
                Save Job
              </Link>
            </div>
            <div class="mt-4 pt-4" style="border-top: 1px solid var(--color-theme-stroke);">
              <p class="wireframe-text text-xs" style="color: var(--color-theme-tertiary);">
                <Icon name="bx:bx-time" class="w-3 h-3 inline mr-1" />
                Application deadline: March 15, 2024
              </p>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Similar Jobs Section -->
  <section class="wireframe-section py-16">
    <Container>
      <div class="text-center mb-12">
        <h2 class="wireframe-heading text-2xl lg:text-3xl mb-4">
          Similar Opportunities
        </h2>
        <p class="wireframe-text text-lg">Other positions that might interest you</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Similar Job 1 -->
        <div class="wireframe-box doodle-border p-6">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="wireframe-heading text-lg mb-1">Full Stack Developer</h3>
              <p class="wireframe-text text-sm" style="color: var(--color-theme-tertiary);">DataFlow Inc.</p>
            </div>
            <span class="wireframe-text text-xs px-2 py-1 rounded" 
                  style="background-color: var(--color-theme-quaternary);">Remote</span>
          </div>
          <p class="wireframe-text text-sm mb-4">
            Build end-to-end applications using React, Node.js, and modern cloud technologies.
          </p>
          <div class="flex items-center justify-between">
            <span class="wireframe-text text-sm font-semibold">$110,000 - $140,000</span>
            <Link href="#" size="sm" style="outline" class="doodle">View</Link>
          </div>
        </div>

        <!-- Similar Job 2 -->
        <div class="wireframe-box doodle-border p-6">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="wireframe-heading text-lg mb-1">React Developer</h3>
              <p class="wireframe-text text-sm" style="color: var(--color-theme-tertiary);">StartupXYZ</p>
            </div>
            <span class="wireframe-text text-xs px-2 py-1 rounded" 
                  style="background-color: var(--color-theme-quaternary);">Hybrid</span>
          </div>
          <p class="wireframe-text text-sm mb-4">
            Join a fast-growing startup and help build revolutionary fintech products.
          </p>
          <div class="flex items-center justify-between">
            <span class="wireframe-text text-sm font-semibold">$100,000 - $130,000</span>
            <Link href="#" size="sm" style="outline" class="doodle">View</Link>
          </div>
        </div>

        <!-- Similar Job 3 -->
        <div class="wireframe-box doodle-border p-6">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="wireframe-heading text-lg mb-1">UI/UX Developer</h3>
              <p class="wireframe-text text-sm" style="color: var(--color-theme-tertiary);">DesignLab Studio</p>
            </div>
            <span class="wireframe-text text-xs px-2 py-1 rounded" 
                  style="background-color: var(--color-theme-quaternary);">On-site</span>
          </div>
          <p class="wireframe-text text-sm mb-4">
            Bridge the gap between design and development with your frontend expertise.
          </p>
          <div class="flex items-center justify-between">
            <span class="wireframe-text text-sm font-semibold">$95,000 - $125,000</span>
            <Link href="#" size="sm" style="outline" class="doodle">View</Link>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Company CTA Section -->
  <section class="wireframe-section py-16">
    <Container>
      <div class="wireframe-box doodle-border p-12 text-center max-w-4xl mx-auto">
        <h2 class="wireframe-heading text-2xl lg:text-3xl mb-4">
          Join the TechInnovate Team
        </h2>
        <p class="wireframe-text text-lg mb-8 max-w-2xl mx-auto">
          Be part of a company that's shaping the future of technology. We offer competitive compensation, amazing benefits, and the opportunity to work on projects that matter.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
          <Link
            href="#"
            class="doodle flex items-center justify-center gap-2"
            size="lg"
            style="primary">
            <Icon name="bx:bx-send" class="w-5 h-5" />
            Apply to This Position
          </Link>
          <Link
            href="#"
            class="doodle flex items-center justify-center gap-2"
            size="lg"
            style="outline">
            <Icon name="bx:bx-building" class="w-5 h-5" />
            View All Jobs
          </Link>
        </div>
        <div class="flex items-center justify-center gap-6 text-sm" style="color: var(--color-theme-tertiary);">
          <div class="flex items-center gap-2">
            <Icon name="bx:bx-check" class="w-4 h-4" />
            <span class="wireframe-text">Equal Opportunity Employer</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="bx:bx-shield" class="w-4 h-4" />
            <span class="wireframe-text">Background Check Required</span>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>