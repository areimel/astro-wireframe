---
import { getCollection } from "astro:content";
import CaseStudyCard from "@/components/cards/CaseStudyCard.astro";
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import caseStudiesData from "@/data/case-studies.json";

// Filter case studies entries with 'draft: false' & date before current date
const publishedCaseStudiesEntries = await getCollection("case-studies", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

// Sort content entries by publication date
publishedCaseStudiesEntries.sort(function (a, b) {
  return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
});
---

<Layout title="Case Studies">
  <Container>
    <Sectionhead>
      <Fragment slot="title">{caseStudiesData.title}</Fragment>
      <Fragment slot="desc">
        {caseStudiesData.description}
      </Fragment>
    </Sectionhead>
    <main class="mt-16">
      <ul class="grid gap-16 max-w-4xl mx-auto">
        {publishedCaseStudiesEntries.map((caseStudyEntry, index) => (
          <li>
            <CaseStudyCard
              href={`/case-studies/${caseStudyEntry.slug}`}
              image={caseStudyEntry.data.image}
              industry={caseStudyEntry.data.industry}
              title={caseStudyEntry.data.title}
              client={caseStudyEntry.data.client}
              publishDate={caseStudyEntry.data.publishDate}
              index={index}
            />
          </li>
        ))}
      </ul>
    </main>
  </Container>
</Layout>