---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import SplitSection from "@/components/wireframes/SplitSection.astro";
import Link from "@/components/ui/link.astro";
import Button from "@/components/ui/button.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Split Screen Layout - Wireframe Landing Page">
  <!-- Hero Split Section -->
  <SplitSection contentSide="left" padding="py-16 lg:py-24">
    <div slot="content">
      <h1 class="wireframe-heading text-4xl lg:text-6xl mb-6">
        Creative Design Studio
      </h1>
      <p class="wireframe-text text-xl mb-8 max-w-lg">
        We bring your brand to life through exceptional design, creative strategy, and compelling visual storytelling that resonates with your audience.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <Link
          href="#portfolio"
          class="doodle flex items-center justify-center gap-2"
          size="lg"
          style="primary">
          <Icon name="bx:bx-palette" class="w-5 h-5" />
          View Our Work
        </Link>
        <Link
          href="#contact"
          class="doodle flex items-center justify-center gap-2"
          size="lg"
          style="outline">
          <Icon name="bx:bx-chat" class="w-5 h-5" />
          Start Project
        </Link>
      </div>
    </div>
    
    <div slot="visual" class="text-center">
      <Icon name="bx:bx-image" class="w-24 h-24 mx-auto mb-4" style="color: var(--color-theme-button);" />
      <p class="wireframe-text text-lg font-semibold">Creative Showcase</p>
      <p class="wireframe-text text-sm mt-2" style="color: var(--color-theme-tertiary);">Hero visual featuring latest project or brand imagery</p>
    </div>
  </SplitSection>

  <!-- Feature Split 1: Brand Strategy -->
  <SplitSection contentSide="right" background="alternate">
    <div slot="content">
      <div class="flex items-center mb-4">
        <Icon name="bx:bx-brain" class="w-8 h-8 mr-3" style="color: var(--color-theme-secondary);" />
        <h2 class="wireframe-heading text-3xl lg:text-4xl">Brand Strategy</h2>
      </div>
      <p class="wireframe-text text-xl mb-6">
        We develop comprehensive brand strategies that define your unique voice, position, and visual identity in the market.
      </p>
      <ul class="space-y-3 mb-8">
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Brand positioning & messaging</span>
        </li>
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Visual identity systems</span>
        </li>
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Brand guidelines & standards</span>
        </li>
      </ul>
      <Button class="doodle" style="outline">Learn More</Button>
    </div>
    
    <div slot="visual" class="text-center">
      <Icon name="bx:bx-target-lock" class="w-20 h-20 mx-auto mb-4" style="color: var(--color-theme-secondary);" />
      <p class="wireframe-text text-lg font-semibold">Strategy Workshop</p>
      <p class="wireframe-text text-sm mt-2" style="color: var(--color-theme-tertiary);">Process diagrams, brand boards, strategy documents</p>
    </div>
  </SplitSection>

  <!-- Feature Split 2: Design & Creative -->
  <SplitSection contentSide="left">
    <div slot="content">
      <div class="flex items-center mb-4">
        <Icon name="bx:bx-brush" class="w-8 h-8 mr-3" style="color: var(--color-theme-tertiary);" />
        <h2 class="wireframe-heading text-3xl lg:text-4xl">Design & Creative</h2>
      </div>
      <p class="wireframe-text text-xl mb-6">
        From concept to execution, we craft beautiful and functional designs that captivate audiences and drive engagement.
      </p>
      <ul class="space-y-3 mb-8">
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Logo & identity design</span>
        </li>
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Website & digital experiences</span>
        </li>
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Print & marketing materials</span>
        </li>
      </ul>
      <Button class="doodle" style="primary">View Portfolio</Button>
    </div>
    
    <div slot="visual" class="text-center">
      <Icon name="bx:bx-photo-album" class="w-20 h-20 mx-auto mb-4" style="color: var(--color-theme-tertiary);" />
      <p class="wireframe-text text-lg font-semibold">Design Portfolio</p>
      <p class="wireframe-text text-sm mt-2" style="color: var(--color-theme-tertiary);">Gallery of recent projects, case studies, design samples</p>
    </div>
  </SplitSection>

  <!-- Feature Split 3: Digital Experience -->
  <SplitSection contentSide="right" background="alternate">
    <div slot="content">
      <div class="flex items-center mb-4">
        <Icon name="bx:bx-devices" class="w-8 h-8 mr-3" style="color: var(--color-theme-highlight);" />
        <h2 class="wireframe-heading text-3xl lg:text-4xl">Digital Experience</h2>
      </div>
      <p class="wireframe-text text-xl mb-6">
        We create seamless digital experiences across all platforms, ensuring your brand connects with users wherever they are.
      </p>
      <ul class="space-y-3 mb-8">
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Responsive web design</span>
        </li>
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">Mobile app interfaces</span>
        </li>
        <li class="flex items-center gap-3">
          <Icon name="bx:bx-check-circle" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <span class="wireframe-text">User experience optimization</span>
        </li>
      </ul>
      <Button class="doodle" style="outline">See Process</Button>
    </div>
    
    <div slot="visual" class="text-center">
      <Icon name="bx:bx-mobile-alt" class="w-20 h-20 mx-auto mb-4" style="color: var(--color-theme-highlight);" />
      <p class="wireframe-text text-lg font-semibold">Digital Showcase</p>
      <p class="wireframe-text text-sm mt-2" style="color: var(--color-theme-tertiary);">Interactive demos, device mockups, user journey flows</p>
    </div>
  </SplitSection>

  <!-- Testimonial Split Section -->
  <SplitSection contentSide="left">
    <div slot="content">
      <blockquote class="wireframe-text text-2xl lg:text-3xl mb-6 leading-relaxed">
        "Working with this team transformed our entire brand presence. The results exceeded our expectations and drove a 300% increase in engagement."
      </blockquote>
      <div class="flex items-center gap-4 mb-6">
        <div class="wireframe-box doodle-border w-16 h-16 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="bx:bx-user" class="w-8 h-8" style="color: var(--color-theme-tertiary);" />
        </div>
        <div>
          <p class="wireframe-heading font-semibold text-lg">Jessica Martinez</p>
          <p class="wireframe-text" style="color: var(--color-theme-tertiary);">Creative Director, Innovate Co.</p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <div class="flex">
          <Icon name="bx:bxs-star" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <Icon name="bx:bxs-star" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <Icon name="bx:bxs-star" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <Icon name="bx:bxs-star" class="w-5 h-5" style="color: var(--color-theme-button);" />
          <Icon name="bx:bxs-star" class="w-5 h-5" style="color: var(--color-theme-button);" />
        </div>
        <span class="wireframe-text text-sm ml-2">5.0 / 5.0</span>
      </div>
    </div>
    
    <div slot="visual" class="text-center">
      <div class="wireframe-box doodle-border w-32 h-32 rounded-full flex items-center justify-center mx-auto mb-4">
        <Icon name="bx:bx-camera" class="w-12 h-12" style="color: var(--color-theme-tertiary);" />
      </div>
      <p class="wireframe-text text-lg font-semibold">Client Photo</p>
      <p class="wireframe-text text-sm mt-2" style="color: var(--color-theme-tertiary);">Professional headshot or team photo</p>
      <div class="mt-6 flex justify-center gap-2">
        <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center">
          <span class="wireframe-text text-xs">Logo</span>
        </div>
        <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center">
          <span class="wireframe-text text-xs">Logo</span>
        </div>
        <div class="wireframe-box doodle-border w-12 h-12 rounded-full flex items-center justify-center">
          <span class="wireframe-text text-xs">Logo</span>
        </div>
      </div>
    </div>
  </SplitSection>

  <!-- Final CTA Split Section -->
  <section class="wireframe-section py-16 lg:py-24" style="background-color: var(--color-theme-section-bg);">
    <Container>
      <div class="wireframe-box doodle-border p-12 text-center max-w-4xl mx-auto">
        <h2 class="wireframe-heading text-3xl lg:text-5xl mb-6">
          Ready to Elevate Your Brand?
        </h2>
        <p class="wireframe-text text-xl mb-8 max-w-2xl mx-auto">
          Let's collaborate to create something extraordinary. Get in touch to discuss your project and discover how we can bring your vision to life.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <Link
            href="#contact"
            class="doodle flex items-center justify-center gap-2"
            size="lg"
            style="primary">
            <Icon name="bx:bx-rocket" class="w-5 h-5" />
            Start Your Project
          </Link>
          <Link
            href="#portfolio"
            class="doodle flex items-center justify-center gap-2"
            size="lg"
            style="outline">
            <Icon name="bx:bx-photo-album" class="w-5 h-5" />
            View Our Work
          </Link>
        </div>
        <div class="grid grid-cols-3 gap-8 max-w-lg mx-auto">
          <div class="text-center">
            <p class="wireframe-heading text-2xl font-bold mb-1">150+</p>
            <p class="wireframe-text text-sm" style="color: var(--color-theme-tertiary);">Projects Delivered</p>
          </div>
          <div class="text-center">
            <p class="wireframe-heading text-2xl font-bold mb-1">98%</p>
            <p class="wireframe-text text-sm" style="color: var(--color-theme-tertiary);">Client Satisfaction</p>
          </div>
          <div class="text-center">
            <p class="wireframe-heading text-2xl font-bold mb-1">5+</p>
            <p class="wireframe-text text-sm" style="color: var(--color-theme-tertiary);">Years Experience</p>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>