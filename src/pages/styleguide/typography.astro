---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import ComponentGrid from "@/components/styleguide/ComponentGrid.astro";
import TypographyShowcase from "@/components/styleguide/TypographyShowcase.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="Typography - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl wireframe-heading mb-4">
          Wireframe Typography
        </h1>
        <p class="text-xl wireframe-text max-w-2xl mx-auto mb-8">
          Hand-drawn typography using Short Stack font for authentic wireframe aesthetics.
          Explore our monochrome typography system with DoodleCSS enhancements.
        </p>
        
        <!-- Back to Styleguide Navigation -->
        <div class="flex justify-center">
          <Link href="/styleguide" style="outline" size="md" class="inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            Back to Styleguide
          </Link>
        </div>
      </div>

      <!-- Typography Section -->
      <div id="typography">
        <ComponentGrid 
          title="Wireframe Typography System" 
          description="Hand-drawn typography using Short Stack font, optimized for sketchy wireframe aesthetics with monochrome color themes"
          columns={1}
        >
          <TypographyShowcase />
        </ComponentGrid>
      </div>

      <!-- Wireframe Typography Showcase -->
      <div class="py-16">
        <ComponentGrid 
          title="Wireframe Typography Showcase" 
          description="Hand-drawn text styles and wireframe-specific classes for authentic sketch aesthetics"
          columns={1}
        >
          <!-- Wireframe vs Standard Comparison -->
          <div class="grid lg:grid-cols-2 gap-8">
            <div class="wireframe-box p-6 doodle">
              <h3 class="text-lg wireframe-heading mb-4">Wireframe Classes</h3>
              <div class="space-y-4">
                <div>
                  <p class="text-sm theme-card-text mb-1">wireframe-heading</p>
                  <h2 class="text-2xl wireframe-heading">Hand-drawn Heading</h2>
                </div>
                <div>
                  <p class="text-sm theme-card-text mb-1">wireframe-text</p>
                  <p class="wireframe-text">Hand-drawn body text with Short Stack font for authentic sketchy feel.</p>
                </div>
                <div>
                  <p class="text-sm theme-card-text mb-1">Button with doodle class</p>
                  <button class="theme-button-primary doodle px-4 py-2 rounded">Wireframe Button</button>
                </div>
              </div>
            </div>
            
            <div class="wireframe-box p-6 doodle">
              <h3 class="text-lg wireframe-heading mb-4">Standard Theme Classes</h3>
              <div class="space-y-4">
                <div>
                  <p class="text-sm theme-card-text mb-1">theme-headline</p>
                  <h2 class="text-2xl theme-headline">Standard Heading</h2>
                </div>
                <div>
                  <p class="text-sm theme-card-text mb-1">theme-paragraph</p>
                  <p class="theme-paragraph">Standard body text using the default font stack for clean typography.</p>
                </div>
                <div>
                  <p class="text-sm theme-card-text mb-1">Standard button</p>
                  <button class="theme-button-primary px-4 py-2 rounded">Standard Button</button>
                </div>
              </div>
            </div>
          </div>
        </ComponentGrid>
      </div>
      
      <!-- Quick Reference Section -->
      <div class="py-16">
        <ComponentGrid 
          title="Quick Reference" 
          description="Wireframe typography classes and their corresponding CSS properties"
          columns={2}
        >
          <!-- Wireframe Classes Reference -->
          <div class="wireframe-box p-6 doodle">
            <h3 class="text-lg wireframe-heading mb-4">Wireframe Text Classes</h3>
            <div class="space-y-2 text-sm font-mono">
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.wireframe-heading</code>
                <span class="wireframe-heading text-sm">Hand-drawn headings</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.wireframe-text</code>
                <span class="wireframe-text text-sm">Hand-drawn body text</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.doodle</code>
                <span class="theme-card-text text-sm">DoodleCSS styling</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.wireframe-box</code>
                <span class="theme-card-text text-sm">Sketch containers</span>
              </div>
            </div>
          </div>
          
          <!-- Standard Theme Classes Reference -->
          <div class="wireframe-box p-6 doodle">
            <h3 class="text-lg wireframe-heading mb-4">Standard Theme Classes</h3>
            <div class="space-y-2 text-sm font-mono">
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.theme-headline</code>
                <span class="theme-headline text-sm">Primary headings</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.theme-sub-headline</code>
                <span class="theme-sub-headline text-sm">Secondary headings</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.theme-paragraph</code>
                <span class="theme-paragraph text-sm">Body text</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.theme-card-text</code>
                <span class="theme-card-text text-sm">Card content</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.theme-link</code>
                <span class="theme-link text-sm">Interactive links</span>
              </div>
              <div class="flex justify-between items-center">
                <code class="text-xs" style="background-color: var(--color-theme-quaternary); padding: 2px 6px; border-radius: 4px;">.theme-highlight</code>
                <span class="theme-highlight text-sm">Accent text</span>
              </div>
            </div>
          </div>

          <!-- Common Size Classes -->
          <div class="p-6 rounded-lg theme-card-bg">
            <h3 class="text-lg font-semibold theme-headline mb-4">Text Size Classes</h3>
            <div class="space-y-2">
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-6xl</code>
                <span class="text-6xl theme-headline">H1</span>
              </div>
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-5xl</code>
                <span class="text-5xl theme-headline">H2</span>
              </div>
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-4xl</code>
                <span class="text-4xl theme-headline">H3</span>
              </div>
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-3xl</code>
                <span class="text-3xl theme-sub-headline">H4</span>
              </div>
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-lg</code>
                <span class="text-lg theme-paragraph">Large body</span>
              </div>
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-base</code>
                <span class="text-base theme-paragraph">Body text</span>
              </div>
              <div class="flex items-center gap-3">
                <code class="text-sm theme-card-text bg-gray-100 px-2 py-1 rounded">text-sm</code>
                <span class="text-sm theme-card-text">Small text</span>
              </div>
            </div>
          </div>
        </ComponentGrid>
      </div>

      <!-- Footer -->
      <div class="py-16 text-center border-t" style="border-color: var(--color-theme-stroke);">
        <p class="wireframe-text mb-4">
          This wireframe typography system ensures consistent hand-drawn aesthetics with monochrome theming across all components.
        </p>
        <Link href="/styleguide" style="outline" size="sm">
          Return to Main Styleguide
        </Link>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure proper scroll padding for fixed navigation */
  [id] {
    scroll-margin-top: 2rem;
  }

  /* Quick reference styling */
  .quick-ref-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
</style>