---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import StyleguideNavCard from "@/components/styleguide/StyleguideNavCard.astro";

const styleguideCards = [
  {
    icon: "bx:bx-palette",
    title: "Color Palettes",
    description: "Interactive color swatches showing all available themes with hex codes, CSS variables, and theme switching functionality.",
    href: "/styleguide/colors",
    linkText: "Explore Colors"
  },
  {
    icon: "bx:bx-text",
    title: "Typography",
    description: "Font hierarchy, text styles, and reading patterns using Inter Variable and Bricolage Grotesque Variable fonts.",
    href: "/styleguide/typography",
    linkText: "View Typography"
  },
  {
    icon: "bx:bx-radio-circle-marked",
    title: "Buttons",
    description: "Interactive button variants with different styles, sizes, states, and accessibility features for all interface needs.",
    href: "/styleguide/buttons",
    linkText: "See Buttons"
  },
  {
    icon: "bx:bx-card",
    title: "Cards",
    description: "Content card patterns used throughout the application including basic, feature, pricing, and image card layouts.",
    href: "/styleguide/cards",
    linkText: "Browse Cards"
  },
  {
    icon: "bx:bx-star",
    title: "Icons",
    description: "Available icons from the astro-icon system including Box Icons, Unicons, and Simple Icons with search and copy features.",
    href: "/styleguide/icons",
    linkText: "Find Icons"
  },
  {
    icon: "bx:bx-ruler",
    title: "Spacing",
    description: "Visual guide to margin, padding, and layout spacing using Tailwind's spacing system with interactive examples.",
    href: "/styleguide/spacing",
    linkText: "Learn Spacing"
  }
];
---

<Layout title="Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl font-bold theme-headline mb-4">
          Design System Styleguide
        </h1>
        <p class="text-xl theme-paragraph max-w-2xl mx-auto">
          A comprehensive overview of our design system including color palettes, 
          typography, components, and interactive elements. Explore each section in detail.
        </p>
      </div>

      <!-- Styleguide Sections Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {styleguideCards.map((card) => (
          <StyleguideNavCard {...card} />
        ))}
      </div>

      <!-- Quick Start Section -->
      <div class="mb-16 p-8 rounded-lg theme-card-bg doodle-border">
        <h2 class="text-2xl font-semibold theme-headline mb-4">Getting Started</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-medium theme-sub-headline mb-3">For Designers</h3>
            <p class="theme-paragraph mb-4">
              Start with the Color Palettes to understand the theme system, then explore Typography for text hierarchy and Cards for layout patterns.
            </p>
            <div class="flex gap-3">
              <Link href="/styleguide/colors" style="outline" size="sm">Colors</Link>
              <Link href="/styleguide/typography" style="outline" size="sm">Typography</Link>
              <Link href="/styleguide/cards" style="outline" size="sm">Cards</Link>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-medium theme-sub-headline mb-3">For Developers</h3>
            <p class="theme-paragraph mb-4">
              Begin with Buttons and Icons for interactive components, then review Spacing for layout consistency across all builds.
            </p>
            <div class="flex gap-3">
              <Link href="/styleguide/buttons" style="outline" size="sm">Buttons</Link>
              <Link href="/styleguide/icons" style="outline" size="sm">Icons</Link>
              <Link href="/styleguide/spacing" style="outline" size="sm">Spacing</Link>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Resources -->
      <div class="text-center py-16">
        <h2 class="text-2xl font-semibold theme-headline mb-4">Additional Resources</h2>
        <p class="text-lg theme-paragraph mb-8 max-w-3xl mx-auto">
          This styleguide showcases our complete design system built with Astro 5, TailwindCSS 4, 
          and a dynamic multi-palette theme system. Each section is designed to help maintain consistency 
          and accelerate development workflows.
        </p>
        <div class="flex justify-center gap-4">
          <Link href="/" style="outline" size="md">
            <Icon name="bx:bx-home" class="w-4 h-4 mr-2" />
            Homepage
          </Link>
          <Link href="/about" style="outline" size="md">
            <Icon name="bx:bx-info-circle" class="w-4 h-4 mr-2" />
            About
          </Link>
          <Link href="/contact" style="outline" size="md">
            <Icon name="bx:bx-envelope" class="w-4 h-4 mr-2" />
            Contact
          </Link>
        </div>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure proper scroll padding for fixed navigation */
  [id] {
    scroll-margin-top: 2rem;
  }
</style>