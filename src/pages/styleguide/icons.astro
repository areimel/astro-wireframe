---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import ComponentGrid from "@/components/styleguide/ComponentGrid.astro";
import IconShowcase from "@/components/styleguide/IconShowcase.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="Icons - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl wireframe-heading mb-4">
          Wireframe Icon System
        </h1>
        <div class="wireframe-section max-w-3xl mx-auto mb-8">
          <p class="text-xl wireframe-text mb-6">
            Browse wireframe-optimized icons designed for prototypes and mockups. All icons integrate 
            seamlessly with the monochrome theme system and hand-drawn aesthetic. Click any icon to copy its name.
          </p>
          <div class="wireframe-box doodle-border p-4 text-center">
            <span class="wireframe-text text-sm">
              ‚ú® Icons automatically adapt to all 8 monochrome themes with authentic wireframe styling
            </span>
          </div>
        </div>

        <!-- Back Navigation -->
        <div class="flex justify-center">
          <Link href="/styleguide" style="outline" size="md" class="doodle">
            ‚Üê Back to Styleguide
          </Link>
        </div>
      </div>

      <!-- Main Content -->
      <div class="mb-16">
        <ComponentGrid 
          title="Wireframe Icon Library" 
          description="Hand-selected icons perfect for wireframe mockups, prototypes, and design documentation with monochrome styling"
          columns={1}
        >
          <IconShowcase />
        </ComponentGrid>
      </div>

      <!-- Footer -->
      <div class="py-16 text-center wireframe-section">
        <div class="wireframe-box doodle-border p-6 max-w-2xl mx-auto mb-6">
          <p class="wireframe-text text-lg mb-4">
            Icons inherit monochrome colors and work seamlessly with wireframe components. Apply size classes like 
            <code class="wireframe-text px-2 py-1">w-6 h-6</code> and use theme color variables for consistent styling.
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm wireframe-text opacity-75">
            <span>üìê Scalable sizes</span>
            <span>üé® Monochrome themes</span>
            <span>‚úèÔ∏è Wireframe ready</span>
            <span>üîó Easy copying</span>
          </div>
        </div>
        <Link href="/styleguide" style="outline" size="sm" class="doodle">
          Return to Main Styleguide
        </Link>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure proper scroll padding for internal navigation */
  [id] {
    scroll-margin-top: 2rem;
  }
</style>