---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import ComponentGrid from "@/components/styleguide/ComponentGrid.astro";
import IconShowcase from "@/components/styleguide/IconShowcase.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="Icons - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl font-bold theme-headline mb-4">
          Icon System
        </h1>
        <p class="text-xl theme-paragraph max-w-2xl mx-auto mb-8">
          Browse commonly used icons powered by the astro-icon system, including Box Icons, Unicons,
          and Simple Icons. Click any icon to copy its name.
        </p>

        <!-- Back Navigation -->
        <div class="flex justify-center">
          <Link href="/styleguide" style="outline" size="md">
            ‚Üê Back to Styleguide
          </Link>
        </div>
      </div>

      <!-- Main Content -->
      <div class="mb-16">
        <ComponentGrid 
          title="Icon Library" 
          description="A curated set of project-ready icons, grouped by collection, with size and usage examples"
          columns={1}
        >
          <IconShowcase />
        </ComponentGrid>
      </div>

      <!-- Footer -->
      <div class="py-16 text-center border-t" style="border-color: var(--color-theme-stroke);">
        <p class="theme-paragraph mb-4">
          Icons inherit color and size via utility classes. Apply Tailwind width/height (e.g., <code class="px-2 py-1 rounded bg-gray-100 dark:bg-gray-800">w-6 h-6</code>) and theme text colors.
        </p>
        <Link href="/styleguide" style="outline" size="sm">
          Return to Main Styleguide
        </Link>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure proper scroll padding for internal navigation */
  [id] {
    scroll-margin-top: 2rem;
  }
</style>