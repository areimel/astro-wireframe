---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import ComponentGrid from "@/components/styleguide/ComponentGrid.astro";
import CardShowcase from "@/components/styleguide/CardShowcase.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="Cards - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl wireframe-heading mb-4">
          Card Components
        </h1>
        <div class="wireframe-section max-w-3xl mx-auto mb-8">
          <p class="text-xl wireframe-text mb-6">
            Comprehensive collection of wireframe card components featuring hand-drawn borders, 
            monochrome aesthetics, and authentic sketch-like styling. All cards integrate seamlessly 
            with the 8 monochrome theme system.
          </p>
          <div class="wireframe-box p-4 text-center">
            <span class="wireframe-text text-sm">
              üé® Try switching between the 8 monochrome themes to see wireframe cards adapt
            </span>
          </div>
        </div>
        
        <!-- Back Navigation -->
        <div class="flex justify-center">
          <Link href="/styleguide" style="outline" size="md" class="doodle">
            ‚Üê Back to Styleguide
          </Link>
        </div>
      </div>

      <!-- Main Content -->
      <div class="mb-16">
        <ComponentGrid 
          title="Wireframe Card System" 
          description="Hand-drawn card components with DoodleCSS integration, monochrome aesthetics, and authentic sketch-like borders for prototyping and design"
          columns={1}
        >
          <CardShowcase />
        </ComponentGrid>
      </div>

      <!-- Footer -->
      <div class="py-16 text-center wireframe-section">
        <div class="space-y-6">
          <div class="wireframe-box p-6 max-w-2xl mx-auto">
            <p class="wireframe-text text-lg mb-4">
              These wireframe card components automatically adapt to all 8 monochrome themes and maintain 
              authentic hand-drawn aesthetics perfect for prototyping, wireframing, and sketch-style designs.
            </p>
            <div class="flex flex-wrap justify-center gap-4 text-sm wireframe-text opacity-75">
              <span>‚úèÔ∏è Hand-drawn borders</span>
              <span>üé® Monochrome themes</span>
              <span>üì± Responsive design</span>
              <span>‚ôø Accessible markup</span>
            </div>
          </div>
          <div class="flex justify-center">
            <Link href="/styleguide" style="primary" size="md" class="doodle">
              Explore More Wireframe Components
            </Link>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for any anchor links within CardShowcase */
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure proper scroll padding for any internal navigation */
  [id] {
    scroll-margin-top: 2rem;
  }
</style>