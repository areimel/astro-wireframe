---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import ComponentGrid from "@/components/styleguide/ComponentGrid.astro";
import ButtonShowcase from "@/components/styleguide/ButtonShowcase.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="Buttons - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl font-bold theme-headline mb-4">
          Button Components
        </h1>
        <p class="text-xl theme-paragraph max-w-2xl mx-auto mb-8">
          Interactive button and link components with multiple styles, sizes, and variants. 
          Fully integrated with the dynamic color theming system.
        </p>
        
        <!-- Back Navigation -->
        <div class="flex justify-center">
          <Link href="/styleguide" style="outline" size="md">
            ‚Üê Back to Styleguide
          </Link>
        </div>
      </div>

      <!-- Main Content -->
      <div class="mb-16">
        <ComponentGrid 
          title="Complete Button System" 
          description="All available button components, styles, sizes, and usage patterns in one comprehensive showcase"
          columns={1}
        >
          <ButtonShowcase />
        </ComponentGrid>
      </div>

      <!-- Footer -->
      <div class="py-16 text-center">
        <div class="space-y-4">
          <p class="theme-paragraph">
            These button components automatically adapt to all 17 color themes. 
            Try switching themes with the color palette selector to see them in action.
          </p>
          <div class="flex justify-center">
            <Link href="/styleguide" style="primary" size="md">
              Explore More Components
            </Link>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for any anchor links within ButtonShowcase */
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure proper scroll padding for any internal navigation */
  [id] {
    scroll-margin-top: 2rem;
  }
</style>