---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import ComponentGrid from "@/components/styleguide/ComponentGrid.astro";
import ButtonShowcase from "@/components/styleguide/ButtonShowcase.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="Buttons - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16 text-center">
        <h1 class="text-5xl lg:text-6xl wireframe-heading mb-4">
          Wireframe Buttons
        </h1>
        <p class="text-xl wireframe-text max-w-2xl mx-auto mb-8">
          Hand-drawn button components with authentic sketch aesthetics. 
          Built with DoodleCSS and Short Stack font, fully integrated with our 8 monochrome themes.
        </p>
        
        <!-- Back Navigation -->
        <div class="flex justify-center">
          <Link href="/styleguide" style="outline" size="md">
            ‚Üê Back to Styleguide
          </Link>
        </div>
      </div>

      <!-- Main Content -->
      <div class="mb-16">
        <ComponentGrid 
          title="Wireframe Button System" 
          description="Hand-drawn button components with DoodleCSS styling, Short Stack font, and monochrome theme integration"
          columns={1}
        >
          <ButtonShowcase />
        </ComponentGrid>
      </div>

      <!-- Footer -->
      <div class="py-16 text-center">
        <div class="space-y-4">
          <p class="wireframe-text">
            These wireframe button components automatically adapt to all 8 monochrome themes. 
            Try switching themes with the color palette selector to see the hand-drawn aesthetic in action.
          </p>
          <div class="flex justify-center">
            <Link href="/styleguide" style="primary" size="md">
              Explore More Components
            </Link>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior for any anchor links within ButtonShowcase */
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure proper scroll padding for any internal navigation */
  [id] {
    scroll-margin-top: 2rem;
  }
</style>