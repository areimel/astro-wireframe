---
interface Props {
  id?: string;
  class?: string;
}

const { id = "copy-toast", class: className = '' } = Astro.props;
---

<div 
  id={id}
  class:list={[
    "fixed top-4 right-4 px-4 py-2 rounded-lg shadow-lg transition-all duration-300 transform translate-x-full opacity-0 z-50 theme-button-primary",
    className
  ]}
>
  <div class="flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
    <span class="text-sm font-medium">Copied to clipboard!</span>
  </div>
</div>

<style>
  #copy-toast {
    z-index: 9999;
  }
  
  #copy-toast.show {
    transform: translateX(0);
    opacity: 1;
  }
</style>