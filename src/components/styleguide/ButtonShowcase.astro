    </div>
  </ComponentGrid>

  <!-- Link Sizes -->
  <ComponentGrid 
    title="Link Sizes" 
    description="Size variants for link components (note: different default than Button)"
    columns={2}
  >
    <!-- Medium Link -->
    <div class="showcase-item">
      <div class="component-demo mb-4">
        <Link href="#" size="md">Medium Link</Link>
      </div>
      <div class="component-info">
