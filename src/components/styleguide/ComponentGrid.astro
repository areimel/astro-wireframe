---
interface Props {
  title: string;
  description?: string;
  columns?: 1 | 2 | 3 | 4;
  gap?: "sm" | "md" | "lg";
  class?: string;
}

const {
  title,
  description,
  columns = 2,
  gap = "md",
  class: className,
} = Astro.props;

const gridCols = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
  4: "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
};

const gapSizes = {
  sm: "gap-4",
  md: "gap-6",
  lg: "gap-8",
};
---

<div class:list={["styleguide-section mb-16", className]}>
  <!-- Section Header -->
  <div class="mb-8 pb-4 border-b" style="border-color: var(--color-theme-stroke);">
    <h2 class="text-3xl font-bold theme-headline mb-2">{title}</h2>
    {description && (
      <p class="text-lg theme-paragraph">{description}</p>
    )}
  </div>

  <!-- Grid Content -->
  <div class:list={["grid", gridCols[columns], gapSizes[gap]]}>
    <slot />
  </div>
</div>

<style>
  .styleguide-section {
    scroll-margin-top: 2rem;
  }
</style>