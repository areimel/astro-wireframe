---
interface Props {
  text: string;
  title?: string;
  class?: string;
}

const { 
  text, 
  title = `Copy ${text}`, 
  class: className = ''
} = Astro.props;
---

<button 
  class:list={[
    "copy-btn cursor-pointer rounded hover:bg-opacity-10 transition-all duration-200 flex-shrink-0 p-1 w-5 h-5",
    className
  ]}
  data-copy-text={text}
  title={title}
  style="hover:background-color: var(--color-theme-button); opacity: 0.7;"
>
  <svg class="theme-paragraph transition-transform duration-200 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
  </svg>
</button>

<style>
  .copy-btn:hover {
    opacity: 1 !important;
    transform: scale(1.1);
  }
</style>