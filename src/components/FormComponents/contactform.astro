---
import Button from "@/components/ui/button.astro";
const WEB3FORMS_KEY = import.meta.env.WEB3FORMS_KEY ?? "";
---

<!-- To make this contact form work, create your free access key from https://web3forms.com/
     Then you will get all form submissions in your email inbox. -->
<form
  action="https://api.web3forms.com/submit"
  method="POST"
  id="form"
  class="needs-validation"
  novalidate>
  <input type="hidden" name="access_key" value={WEB3FORMS_KEY} />
  <!-- Create your free access key from https://web3forms.com/ -->
  <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
  <div class="mb-5">
    <input
      type="text"
      placeholder="Full Name"
      required
      class="w-full px-4 py-3 border rounded-md focus:outline-none theme-card-bg theme-card-text"
      style="border-color: var(--color-theme-stroke);"
      name="name"
    />
    <div class="empty-feedback invalid-feedback text-sm mt-1" style="color: var(--color-theme-stroke);">
      Please provide your full name.
    </div>
  </div>
  <div class="mb-5">
    <label for="email_address" class="sr-only">Email Address</label><input
      id="email_address"
      type="email"
      placeholder="Email Address"
      name="email"
      required
      class="w-full px-4 py-3 border rounded-md focus:outline-none theme-card-bg theme-card-text"
      style="border-color: var(--color-theme-stroke);"
    />
    <div class="empty-feedback text-sm mt-1" style="color: var(--color-theme-stroke);">
      Please provide your email address.
    </div>
    <div class="invalid-feedback text-sm mt-1" style="color: var(--color-theme-stroke);">
      Please provide a valid email address.
    </div>
  </div>
  <div class="mb-3">
    <textarea
      name="message"
      required
      placeholder="Your Message"
      class="w-full px-4 py-3 border rounded-md focus:outline-none h-36 theme-card-bg theme-card-text"
      style="border-color: var(--color-theme-stroke);"
    ></textarea>
    <div class="empty-feedback invalid-feedback text-sm mt-1" style="color: var(--color-theme-stroke);">
      Please enter your message.
    </div>
  </div>
  <Button type="submit" size="lg" block>Send Message</Button>
  <div id="result" class="mt-3 text-center theme-paragraph"></div>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: var(--color-theme-stroke);
  }
</style>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    form.classList.add("was-validated");
    if (!form.checkValidity()) {
      form.querySelectorAll(":invalid")[0].focus();
      return;
    }
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Sending...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.style.color = "var(--color-theme-highlight)";
          result.innerHTML = json.message;
        } else {
          console.log(response);
          result.style.color = "var(--color-theme-stroke)";
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.style.color = "var(--color-theme-stroke)";
        result.innerHTML = "Something went wrong!";
      })
      .then(function () {
        form.reset();
        form.classList.remove("was-validated");
        setTimeout(() => {
          result.style.display = "none";
        }, 5000);
      });
  });
</script>
