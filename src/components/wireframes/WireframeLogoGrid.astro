---
/**
 * WireframeLogoGrid - Social proof logo display
 * Used for showing company logos/partners
 */

export interface Logo {
  /** Company/logo name */
  name: string;
  /** Optional icon (for wireframe placeholder) */
  icon?: string;
}

export interface Props {
  /** Array of logo items */
  logos: Logo[];
  /** Number of columns */
  columns?: 2 | 3 | 4 | 5 | 6;
  /** Optional section title */
  title?: string;
  /** Optional section description */
  description?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  logos,
  columns = 6,
  title,
  description,
  class: className,
} = Astro.props;

const columnClasses = {
  2: "grid-cols-2",
  3: "grid-cols-2 md:grid-cols-3",
  4: "grid-cols-2 md:grid-cols-4",
  5: "grid-cols-2 md:grid-cols-3 lg:grid-cols-5",
  6: "grid-cols-2 md:grid-cols-4 lg:grid-cols-6",
};
---

<div class={className}>
  {(title || description) && (
    <div class="text-center mb-8">
      {title && (
        <h3 class="wireframe-heading text-2xl lg:text-3xl mb-2">{title}</h3>
      )}
      {description && (
        <p class="wireframe-text text-lg">{description}</p>
      )}
    </div>
  )}

  <div class:list={["grid gap-8", columnClasses[columns]]}>
    {logos.map((logo) => (
      <div class="wireframe-box doodle-border p-4 flex items-center justify-center min-h-[80px]">
        <span class="wireframe-text text-sm text-center">{logo.name}</span>
      </div>
    ))}
  </div>
</div>
