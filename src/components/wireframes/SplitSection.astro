---
export interface Props {
  /** Which side has the content (left or right) */
  contentSide: "left" | "right";
  /** Custom padding classes for the section */
  padding?: string;
  /** Custom classes for the section */
  class?: string;
  /** Background variant */
  background?: "default" | "alternate";
}

const { 
  contentSide, 
  padding = "py-16", 
  class: className = "",
  background = "default"
} = Astro.props;

const bgClass = background === "alternate" ? "wireframe-section-alt" : "wireframe-section";
const contentOrder = contentSide === "left" ? "order-1" : "order-2 lg:order-2";
const visualOrder = contentSide === "left" ? "order-2 lg:order-2" : "order-1";
---

<section class={`${bgClass} ${padding} ${className}`}>
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content Side -->
      <div class={`wireframe-box doodle-border p-8 ${contentOrder}`}>
        <slot name="content" />
      </div>

      <!-- Visual Side -->
      <div class={`wireframe-box doodle-border p-8 flex items-center justify-center min-h-[400px] ${visualOrder}`}>
        <slot name="visual" />
      </div>
    </div>
  </div>
</section>