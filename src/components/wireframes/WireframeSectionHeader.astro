---
/**
 * WireframeSectionHeader - Section title + description
 * Used for consistent section headings across wireframe pages
 */

export interface Props {
  /** Section heading text */
  title: string;
  /** Section description text */
  description?: string;
  /** Text alignment */
  align?: "left" | "center" | "right";
  /** Size variant */
  size?: "sm" | "md" | "lg";
  /** Additional CSS classes */
  class?: string;
}

const {
  title,
  description,
  align = "center",
  size = "md",
  class: className,
} = Astro.props;

const alignClasses = {
  left: "text-left",
  center: "text-center mx-auto",
  right: "text-right ml-auto",
};

const sizeClasses = {
  sm: {
    title: "text-xl lg:text-2xl mb-2",
    description: "text-base",
    maxWidth: "max-w-xl",
  },
  md: {
    title: "text-2xl lg:text-3xl mb-4",
    description: "text-lg",
    maxWidth: "max-w-2xl",
  },
  lg: {
    title: "text-3xl lg:text-4xl mb-4",
    description: "text-xl",
    maxWidth: "max-w-3xl",
  },
};

const sizes = sizeClasses[size];
---

<div class:list={["mb-12", alignClasses[align], align === "center" && sizes.maxWidth, className]}>
  <h2 class:list={["wireframe-heading", sizes.title]}>
    {title}
  </h2>
  {description && (
    <p class:list={["wireframe-text", sizes.description, align === "center" && sizes.maxWidth, align === "center" && "mx-auto"]}>
      {description}
    </p>
  )}
</div>
