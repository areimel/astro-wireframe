---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import links from "@/data/links.json";
import PlaceHolderImage from "@/components/SvgComponents/PlaceHolderImage.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 wireframe-section">
  <div class="py-6 md:order-1 hidden md:block ">
    <!-- <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    /> -->
    <PlaceHolderImage />
  </div>
  <div class="wireframe-box doodle-border">
    <h1
      class="wireframe-heading text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Professional Wireframe System with Hand-Drawn Charm
    </h1>
    <p class="wireframe-text text-lg mt-4 max-w-xl">
      Create website and SaaS wireframes without investing in specific design styles. Our hand-drawn aesthetic encourages rapid iteration and keeps teams focused on structure over aesthetics.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/wireframes"
        class="flex gap-1 items-center justify-center doodle"
        rel="noopener">
        <Icon class="w-5 h-5" name="bx:bx-layout" />
        Explore Wireframe Layouts
      </Link>
      <Link
        size="lg"
        style="outline"
        href="/styleguide"
        class="flex gap-1 items-center justify-center doodle">
        <Icon class="w-4 h-4" name="bx:bx-palette" />
        View Design System
      </Link>
    </div>
  </div>
</main>
